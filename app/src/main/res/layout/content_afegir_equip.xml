<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sanchez.lopez.alberto.campionatlliga.AfegirEquip"
    tools:showIn="@layout/activity_afegir_equip">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblNomJugador"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Nom del Equip" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNomCiutat"
        android:layout_below="@+id/lblNomJugador"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lblNomJugador"
        android:hint="Ciutat"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escut"
        android:id="@+id/textView"
        android:layout_below="@+id/txtNomCiutat"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/ibtnEscut"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:src="@mipmap/ic_shield"
        android:scaleType="fitCenter"
        android:tag="@mipmap/ic_shield" />
</RelativeLayout>
