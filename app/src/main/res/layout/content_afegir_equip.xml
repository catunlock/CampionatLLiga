            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:hint="Nom Titular"
