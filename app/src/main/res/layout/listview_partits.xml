<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="right"
            android:layout_weight="0.24"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom Equip"
                    android:id="@+id/lblCasaNom"
                    android:layout_marginTop="15dp"
                    android:textAlignment="textStart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gols"
                    android:id="@+id/lblCasaGols"
                    android:layout_marginTop="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_toStartOf="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imgForaEscut"
                    android:src="@mipmap/ic_shield"
                    android:layout_alignTop="@+id/imgCasaEscut"
                    android:layout_toStartOf="@+id/linearLayout2" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imgCasaEscut"
                    android:background="#d8d8d8"
                    android:contentDescription="Escut"
                    android:layout_gravity="left"
                    android:src="@mipmap/ic_shield"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.64"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="117dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom Equip"
                    android:id="@+id/lblForaNom"
                    android:layout_marginTop="15dp"
                    android:textAlignment="textEnd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gols"
                    android:id="@+id/lblForaGols"
                    android:layout_marginTop="15dp"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>